import turtle

t = turtle.Turtle()

t.forward(100)
t.left(90)
t.forward(100)
t.left(90)
t.forward(100)
t.left(90)
t.forward(100)
t.left(90)

MODIFY:

import turtle

t = turtle.Turtle()
endloop = 0
counter = 0

while(endloop == 0):
 t.forward(100)
 t.left(90)
 counter += 1
 if (counter == 4):
  break
